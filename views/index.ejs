<!DOCTYPE html>
<html lang="en">



<%-include('partials/nav.ejs')%>

<body>
    <div class="index-body">
    <section class="section">
        <div class="container-grid ">
            <% post.forEach(post=> { %>
                <div class="post-div">
                    <div class="header">
                    <h8 class="title"> t/SummerTravel</h8>
                    <h8 class="text-muted">
                        <%= post.date.toDateString() %>
                    </h8>
                </div>
                <div class="img">
                    <img src="<%=post.image %>">
                    <div class="a"><a href="/travelhub/<%= post._id %>">
                        <%= post.title %>
                    </a></div>
                </div>
                    <div class="card-body">
                        <p class="text-body">
                            <%= post.body %>
                        </p>
                        
                    </div>

                </div>
                <% }) %>

        </div>

    </section>
</div>
</body>

</html>